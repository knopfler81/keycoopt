<div class="container">
  <div class="row padded">

      <div class="col-xs-12 table-head">
        <h3><strong>Facture ref:  <span class="publication-ref"><%= @bill.reference %></span></strong></h3>
      </div>
      <div class="col-xs-12 col-sm-6 table-body">
        <div class="col-xs-6">
          <p><strong>Date de publication:</strong> </p>
          <p><strong>Nom du client:</strong> </p>
          <p><strong>Titre de l'annonce:</strong> </p>
        </div>
        <div class="col-xs-6">
          <p><%= @bill.publication.created_at.strftime("%d/%m/%Y") %></p>
          <p><%= @bill.publication.customer %></p>
          <p><%= @bill.publication.title %></p>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 table-body">
        <div class="col-xs-6">
          <p><strong>Date de la facture:</strong></p>

        </div>
        <div class="col-xs-6">
          <p><%= @bill.created_at.strftime("%d/%m/%Y") %></p>

        </div>
      </div>
      <div class="col-xs-offset-6 ">
        <div class="col-xs-6 table-total ">
          <p><strong>Montant:</strong> </p>
        </div>
        <div class="col-xs-6 table-total">
           <p><%= @bill.amount%> €</p>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="col-xs-12 col-sm-2 table-footer">
             <%= link_to "Retour à la liste", publications_path, class: "btn btn-md btn-primary"  %>
        </div>
        <div class="col-xs-12 col-sm-2 col-sm-offset-8 table-footer">
          <%= link_to "Télécharger le pdf", bill_path(@bill, format: "pdf"), class: "btn btn-md btn-warning"  %>
        </div>
      </div>
  </div>


</div>
